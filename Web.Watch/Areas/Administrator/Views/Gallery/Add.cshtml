
@{
    ViewBag.Title = "Thêm mới Gallery";
}

<script>
    $("#menu_gallery").addClass("menu_active");
</script>

<script src="~/Areas/Administrator/Plugins/ckfinder/ckfinder.js"></script>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<script type="text/javascript" src="js/script.js"></script>

<form action="/Administrator/Gallery/Add" class="container" method="post">
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <div>
                            <label>Hình ảnh</label>
                            <img id="img" src="~/Resources/Images/gallery.jpg" class="img-thumbnail" />
                            <input id="inpImage" type="hidden" name="Image" value="/Resources/Images/gallery.jpg" />
                            <button type="button" id="button-upload" class="btn btn-success mt-3 btn-sm">Tải ảnh lên</button>
                        </div>
                    </div>
                    <div class="col-md-12 text-center">
                        <a href="/Administrator/Gallery" class="btn btn-secondary btn-icon-split mb-3 mr-3">
                            <span class="icon text-gray-600">
                                <i class="fa fa-close"></i>
                            </span>
                            <span class="text">Hủy</span>
                        </a>
                        <button type="submit" class="btn btn-success btn-icon-split mb-3">
                            <span class="icon text-white-50">
                                <i class="fa fa-save"></i>
                            </span>
                            <span class="text"> Lưu lại</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>


<script>
    $(document).ready(function () {
        $('#button-upload').click(function () {
            var finder = new CKFinder();
            finder.basePath = '../files';
            finder.selectActionFunction = setFileField;
            finder.popup();
        });
        function setFileField(fileUrl) {
            $('#inpImage').val(fileUrl);
            $("#img").attr("src", fileUrl)
        }
    })
</script>

