
@{
    Layout = null;
    string error = (string)Session["error"];
    Session["error"] = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập hệ thống</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

    <script type="text/javascript" src="js/script.js"></script>

    <link href="~/Areas/Administrator/Plugins/Bootrapnew/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="~/Areas/Administrator/Plugins/Bootrapnew/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Areas/Administrator/Plugins/Bootrapnew/css/sb-admin-2.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/dcd92f06c4.js" crossorigin="anonymous"></script>
   
</head>
<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h2 text-gray-900 mb-4">ĐĂNG NHẬP <br> TRANG QUẢN TRỊ</h1>
                                    </div>
                                    <form class="user" action="/Administrator/Login" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            <input type="text" name="UserName" placeholder="Tên đăng nhập" class="form-control form-control-user" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="Password" class="form-control form-control-user" placeholder="Mật khẩu" required>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control text-center custom-checkbox small">
                                                @if (!string.IsNullOrWhiteSpace(error))
                                                {
                                                    <strong class="text-danger ">@error</strong>
                                                }
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Đăng nhập</button>
                                    </form>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
    <script src="~/Areas/Administrator/Plugins/Bootrapnew/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Administrator/Plugins/Bootrapnew/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Areas/Administrator/Plugins/Bootrapnew/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->

    <script src="~/Areas/Administrator/Plugins/Bootrapnew/js/sb-admin-2.min.js"></script>
</body>
</html>
