@using Web.Core.Dto;
@model List<MenuDto>
@{
    ViewBag.Title = "Danh mục sản phẩm";
}

<script>
    $("#menu_menu").addClass("menu_active");
</script>

<a href="/Administrator/Menu/Add" class="btn btn-primary btn-sm btn-icon-split ml-4 mb-3">
    <span class="icon text-white-50">
        <i class="fa fa-plus"></i>
    </span>
    <span class="text">Thêm mới</span>
</a>


<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Loại sản phẩm</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên menu</th>
                            <th>Danh mục cha</th>
                            <th>Thứ tự hiển thị</th>
                            <th>Trạng thái hiển thị</th>
                            <th>Hiển thị trang chủ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Tên menu</th>
                            <th>Danh mục cha</th>
                            <th>Thứ tự hiển thị</th>
                            <th>Trạng thái hiển thị</th>
                            <th>Hiển thị trang chủ</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@(item.PMenu?.Name)</td>
                                <td class="text-center">@item.Index</td>
                                <td class="text-center">
                                    @if (item.Active)
                                    {
                                    <a href="#" class="btn btn-success btn-sm btn-circle">
                                        <i class="fas fa-check"></i>
                                    </a>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.ShowHomePage == true)
                                    {
                                        <a href="#" class="btn btn-success btn-sm btn-circle">
                                            <i class="fas fa-check"></i>
                                        </a>
                                    }
                                    
                                </td>
                                <td>
                                    <a href="/Administrator/Menu/Update?id=@item.Id" class="btn btn-primary btn-circle btn-sm">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <button onclick="confirmDelete(@item.Id)" class="btn btn-danger btn-circle btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<script>
    function confirmDelete(id) {
        if (confirm("Xác nhận xóa")) {
            location.href = "/Administrator/Menu/Delete?id=" + id;
        }
    }
</script>