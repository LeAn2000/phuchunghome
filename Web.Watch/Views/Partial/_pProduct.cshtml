@using Web.Core.Dto;
@using Web.Core.Util;
@model ProductDto
@{
    ProductDto product = Model ?? new ProductDto();
}
<div class="card product-item border-0">
    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
        <img class="img-fluid w-100" src="@product.Image" alt="">
    </div>
    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
        <h6 class="text-truncate mb-3"><a href="/san-pham/@product.Alias" class="item-name text-danger">@product.Name</a></h6>
        <div class="d-flex justify-content-center">
            @if (product.DiscountPrice > 0)
            {
                <h6><strong>@(DataHelper.ToCurrency(product.DiscountPrice))₫</strong></h6><h6 class="text-muted ml-2"><del>@(DataHelper.ToCurrency(product.Price))₫</del></h6>
            }
            else
            {
                <h6><strong>@(DataHelper.ToCurrency(product.Price))₫</strong></h6>
            }

        </div>
    </div>
    <div class="card-footer d-flex justify-content-between bg-light border">
        <a href="/san-pham/@product.Alias" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-danger mr-1"></i>Xem chi tiết</a>
        <a href="/mua-hang/@product.Id" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-danger mr-1"></i>Mua ngay</a>
    </div>
</div>